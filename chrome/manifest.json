{
  "manifest_version": 3,
  "name": "UChicago Auto-Auth",
  "version": "1.0.0",
  "description": "Complete hands-free authentication for UChicago services",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "host_permissions": [
    "https://*.duosecurity.com/*",
    "https://*.uchicago.edu/*",
    "https://uchicago.okta.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://uchicago.okta.com/*",
        "https://*.okta.com/*"
      ],
      "js": ["js/auth-overlay.js", "js/okta-handler.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.duosecurity.com/*"
      ],
      "js": ["js/auth-overlay.js", "js/duo-handler.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}